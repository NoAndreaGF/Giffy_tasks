<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/first_gradient"
    tools:context=".messages">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10sp"
        android:rowCount="1"
        android:columnCount="2"
        >
        <ImageButton
            android:id="@+id/rectangle_mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_mensaje"
            android:backgroundTint="@color/yellow"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@drawable/rectangle_ajustes" />

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/profile_msj"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:fontFamily="@font/rubik_bold"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border_image"
        android:backgroundTint="@color/teal_200"
        android:src="@drawable/logo_final"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/msj_example1"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:fontFamily="@font/rubik_bold"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border_image"
        android:backgroundTint="@color/teal_200"
        android:src="@drawable/logo_final_negativo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/msj_example2"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:fontFamily="@font/rubik_bold"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border_image"
        android:backgroundTint="@color/teal_200"
        android:src="@drawable/logo_final_positivo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/msj_example2"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:fontFamily="@font/rubik_bold"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        />


</LinearLayout>