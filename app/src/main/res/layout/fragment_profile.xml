<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_gradient"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:columnCount="2"
        android:padding="10sp"
        android:rowCount="1">

        <ImageView
            android:id="@+id/rectangle_mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:src="@drawable/rectangle_mensaje" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@drawable/rectangle_ajustes" />
    </GridLayout>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/fondoportada" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_perfil"
        android:layout_width="120dp"
        android:layout_height="122dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:src="@drawable/fotoperfil"
        app:civ_border_color="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="@string/profile_name"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/varela_round"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <Button
                android:id="@+id/amigos"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/varela_round"
                android:text="@string/profile_friends"
                android:textSize="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/quiz"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/rectangle_quiz"
            android:drawablePadding="10dp"
            android:fontFamily="@font/varela_round"
            android:text="@string/profile_quiz"
            android:textSize="12dp" />

        <Button
            android:id="@+id/listas"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/rectangle_listas"
            android:drawablePadding="10dp"
            android:fontFamily="@font/varela_round"
            android:text="@string/profile_wishlist"
            android:textSize="12dp" />

        <Button
            android:id="@+id/grupos"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/rectangle_grupos"
            android:drawablePadding="10dp"
            android:fontFamily="@font/varela_round"
            android:text="@string/profile_groups"
            android:textSize="12dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center_horizontal"
        android:text="@string/WISHLIST"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/image_button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_image"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/fondo_blando" />


        <ImageButton
            android:id="@+id/image_button2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_image"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/fondo_blando" />

        <ImageButton
            android:id="@+id/image_button3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_image"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/fondo_blando" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/image_button4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_image"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/fondo_blando" />

        <ImageButton
            android:id="@+id/image_button5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_image"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/fondo_blando" />

        <ImageButton
            android:id="@+id/image_button6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_image"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/fondo_blando" />
    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="350dp"
        android:drawableTint="@color/white"
        android:drawableTop="@drawable/rectangle_ajustes" />
</FrameLayout>